<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Главная{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="{{ asset('bundles/framework/css/screen.css') }}" type="text/css" rel="stylesheet" />
    </head>
    <section id="wrapper">
        <header id="header">
            <div class="top">
                {% block navigation %}
                    <nav class="navigation">
                        <li><a href="/">Главная</a></li>
                        <li><a href="{{ path('blogblogBundle_about')}}">О блоге</a></li>
                        <li><a href="{{ path('blogblogBundle_contact')}}">Контакты</a></li>
                        <li><a href="/admin">Вход</a></li>                    
                    </nav>
                    {% endblock %}
            </div>          
            <hgroup>
                <h2>{% block blog_title %} <a href="">Кулинар</a> {% endblock %}</h2>
                <h3>{% block blog_tagline %} {% endblock %}</h3>
            </hgroup>   
        </header>
        <section class="main-col">
            {% block body %} {% endblock %}
            
        </section>
        <aside class="siderbar">
            {% block siderbar %} {% endblock %}
            
        </aside>
        <div id="footer">
            {% block footer %} {% endblock %}
            <div>Подвал</div>
        </div>
    </section>
        
    <body>
        {% block javascripts %}{% endblock %}
    </body>
</html>
